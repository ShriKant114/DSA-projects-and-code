#include <stdio.h>
#define size 5
int queue[size];
int front = -1;
int rear = -1;

void insertion(int item); // Function prototype
void delition();

int main() {
    int num, in;
    while (1) {
        printf("Enter 1 for insertion");
        printf("\nEnter 2 for deletion");
        printf("\nEnter 3 to exit\n\n");

        scanf("%d", &num);

        switch (num) {
            case 1:
                printf("\nEnter element to insert: ");
                scanf("%d", &in);
                insertion(in);
                printf("\n%d is inserted\n\n", in);
                break;

            case 2:
                delition();
                break;

            case 3:
                return 0;

            default:
                printf("\nInvalid choice\n\n");
                break;
        }
    }

    return 0;
}

void delition() {
    if (front == -1) {
        printf("\nCercular Queue is Empty, Underflow condition occurs\n\n");
    } else {
        printf("\nElement %d is deleted\n\n", queue[front]);

        if (front == rear) {
            front = rear = -1;
        } else {
           front = (front+1);
        }
    }
}

void insertion(int item) {
    if (front == (rear + 1)) {
        printf("Cercular Queue is full, Overflow condition occurs\n\n");
    } else {
        if (front == -1) {
            front = rear = 0;
        }
        else{
        rear = (rear+1);
      }
        queue[rear] = item;
    }
}
    
